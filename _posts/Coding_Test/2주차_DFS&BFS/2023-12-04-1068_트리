```cpp
#include <bits/stdc++.h>
using namespace std;
int n,a,k,root;
vector<int> v[54];

int dfs(int a){
	
	int cnt=0;  // ì—¬ê¸°ì„œ ì´ˆê¸°í™” ì•ˆí•˜ë©´ í‹€ë¦¼... 
	int ret=0;
	
	for(int b : v[a] ){
		if( b==k) continue;
		ret+=dfs(b); // ë°‘ì—ì„œë¶€í„° ìŒ“ì•„ ì˜¬ë¦¬ë©´ì„œ ë”í•¨  
		cnt++;
	}
	if(cnt==0) return 1; // ë¦¬í”„ ë…¸ë“œëŠ” ìì‹ ì—†ìœ¼ë‹ˆ 1 ë°˜í™˜  
	return ret;
}

int main(){
	cin >> n;
	for(int i=0; i<n; i++){
		cin >> a;
		if( a== -1 ) root=i;
		else v[a].push_back(i);
	}
	cin >> k;
	
	if(k==root){
		cout << 0 << "\\n";
		return 0;
	}

	cout << dfs(root) << "\\n";
	return 0;
}
```